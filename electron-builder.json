{
  "productName": "Tesseract",
  "appId": "com.tesseract.tesseract",
  "copyright": "Tesseract Project Â© 2025",
  "publish": [
    {
      "provider": "github",
      "owner": "HaraldBregu",
      "repo": "tesseract"
    }
  ],
  "files": [
    "out/**",
    "resources/**"
  ],
  "icon": "./resources/icons/icon.ico",
  "extraResources": [
    "out/preload/preload.mjs",
    {
      "from": "./resources",
      "to": "resources",
      "filter": [
        "icons/**"
      ]
    }
  ],
  "asar": true,
  "asarUnpack": [],
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false,
  "npmRebuild": false,
  "mac": {
    "target": [
      {
        "target": "pkg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "./resources/icons/mac/icon.icns",
    "extendInfo": {
      "LSApplicationCategoryType": "public.app-category.utilities",
      "NSMicrophoneUsageDescription": "Tesseract needs access to your microphone for audio recording features.",
      "NSCameraUsageDescription": "Tesseract needs access to your camera for video recording features.",
      "NSBluetoothAlwaysUsageDescription": "Tesseract needs access to Bluetooth to connect and manage Bluetooth devices.",
      "NSBluetoothPeripheralUsageDescription": "Tesseract needs access to Bluetooth peripherals for device connectivity.",
      "CFBundleDocumentTypes": [
        {
          "CFBundleTypeName": "Tesseract File",
          "CFBundleTypeIconFile": "fileIcon.icns",
          "CFBundleTypeExtensions": ["tsx"],
          "CFBundleTypeRole": "Editor",
          "LSHandlerRank": "Owner",
          "LSItemContentTypes": ["com.tesseract.tesseract.document"]
        }
      ],
      "UTExportedTypeDeclarations": [
        {
          "UTTypeIdentifier": "com.tesseract.tesseract.document",
          "UTTypeDescription": "Tesseract File",
          "UTTypeConformsTo": ["public.data"],
          "UTTypeTagSpecification": {
            "public.filename-extension": ["tsx"],
            "public.mime-type": ["application/x-tesseract-document"]
          }
        }
      ]
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "./resources/entitlements.mac.plist",
    "entitlementsInherit": "./resources/entitlements.mac.plist",
    "identity": null,
    "type": "development",
    "extraResources": [
      {
        "from": "./resources",
        "to": "resources",
        "filter": []
      }
    ]
  },
  "pkg": {
    "allowAnywhere": true,
    "allowCurrentUserHome": true,
    "allowRootDirectory": true,
    "isRelocatable": false,
    "isVersionChecked": true,
    "hasStrictIdentifier": true,
    "overwriteAction": "upgrade",
    "artifactName": "${productName}-installer-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": [{ "target": "deb" }, { "target": "AppImage" }],
    "category": "Utility",
    "artifactName": "${productName}-${version}.${ext}",
    "icon": "./resources/icons/linux",
    "maintainer": "Tesseract Project",
    "synopsis": "Tesseract",
    "description": "Tesseract - Advanced Text Editor",
    "vendor": "Tesseract Project",
    "executableName": "tesseract",
    "desktop": {
      "Type": "Application",
      "Name": "Tesseract",
      "Comment": "Advanced Text Editor",
      "Icon": "tesseract",
      "Terminal": false,
      "Categories": "Office;WordProcessor;TextEditor;",
      "MimeType": "application/x-tesseract-document;",
      "StartupNotify": true,
      "StartupWMClass": "Tesseract"
    },
    "extraResources": [
      {
        "from": "./resources",
        "to": "resources",
        "filter": []
      }
    ]
  },
  "deb": {
    "packageCategory": "utils",
    "maintainer": "Tesseract Project <contact@tesseract-editor.org>",
    "afterInstall": "./scripts/postinstall.sh",
    "depends": [
      "libgtk-3-0",
      "libnss3",
      "libxss1",
      "libasound2",
      "libatk-bridge2.0-0",
      "libgdk-pixbuf2.0-0",
      "libx11-xcb1",
      "libxcomposite1",
      "libxdamage1",
      "libxrandr2",
      "libxcursor1",
      "libxext6",
      "libxcb1",
      "libnspr4",
      "libdrm2",
      "libcups2",
      "libexpat1",
      "libpulse0",
      "libv4l-0"
    ]
  },
  "win": {
    "icon": "./resources/icons/win/icon.ico",
    "target": "nsis",
    "signAndEditExecutable": true,
    "artifactName": "${productName}.${ext}",
    "forceCodeSigning": false,
    "signtoolOptions": {
      "publisherName": "Tesseract Project"
    },
    "requestedExecutionLevel": "asInvoker",
    "extraResources": [
      {
        "from": "./resources",
        "to": "resources",
        "filter": []
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "Tesseract",
    "multiLanguageInstaller": true,
    "warningsAsErrors": false,
    "deleteAppDataOnUninstall": false,
    "installerIcon": "./resources/icons/win/icon.ico",
    "uninstallerIcon": "./resources/icons/win/icon.ico",
    "perMachine": false,
    "artifactName": "${productName}-${version}.${ext}",
    "displayLanguageSelector": true,
    "runAfterFinish": false,
    "language": "1040",
    "installerLanguages": ["it-IT", "en-US", "es-ES", "fr-FR", "de-DE"]
  }
}
